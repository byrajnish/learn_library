<div class="members-login place-items-start mx-auto h-screen">
  <div class="w-full  max-w-6xl mx-auto shadow-xl pt-2 rounded-lg">
    <div class="flex items-center justify-between w-full mb-2">
      <%= link_to 'Back', users_path,class:"bg-cyan-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to 'Show', @user ,class:"bg-cyan-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%> 
    </div>
    <div class="bg-cyan-600 flex text-center justify-center font-semibold text-2xl action p-3 text-gray-900 rounded-t-lg">
      <h4>User Details </h4>
    </div>
    <div class="bg-white rounded px-8 py-6">
      <%= form_with(model: user, local: true) do |form| %>
        <% if user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% user.errors.full_messages.each do |error| %>
                <li><%=error%></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="flex flex-wrap -mx-3 mt-2">
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :user_type, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :user_type,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :library_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :library_id,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :name,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :father_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :father_name,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :email,maxlength: "20",class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
           <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :contact_num, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :contact_num,maxlength: "10",class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div> 
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :education, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :education,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :address, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :address,maxlength: "20",class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :city, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :city,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
           <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :district, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :district,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div> 
          <div class="field mb-2 w-full md:w-1/3 px-3">
            <%= form.label :state, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :state,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="field mb-2 w-full md:w-1/3 px-3">
            <%= form.label :pin_code, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :pin_code,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="field mb-2 w-full md:w-1/3 px-3">
            <%= form.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :password,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
    
        <div class="actions focus:outline-none flex w-full focus:shadow-outline">
          <%= form.submit "Create Librarian", class: "bg-cyan-600 flex hover:bg-blue-700 justify-center w-full text-white text-xl font-medium rounded mt-4 p-2"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
