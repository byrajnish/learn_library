<div class="members-login place-items-start mx-auto h-screen">
  <div class="w-full  max-w-6xl mx-auto shadow-xl pt-2 rounded-lg">
    <div class="flex items-center justify-between w-full mb-2">
      <%= link_to 'Back', books_path,class:"bg-cyan-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to 'Show', @book ,class:"bg-cyan-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%> 
    </div>
    <div class="bg-cyan-600 flex text-center justify-center font-semibold text-2xl action p-3 text-gray-900 rounded-t-lg">
      <h4>Book Details </h4>
    </div>
    <div class="bg-white rounded px-8 py-6">
      <%= form_with(model: book, local: true) do |form| %>
        <% if book.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
            <ul>
              <% book.errors.full_messages.each do |error| %>
                <li><%=error%></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="flex flex-wrap -mx-3 mt-2">
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :name,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :author, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :author,maxlength: "20",class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
           <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :isbn, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :isbn,maxlength: "20",class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div> 
          <div class="field mb-2 w-full md:w-1/2 px-3">
            <%= form.label :publication_year, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :publication_year,maxlength: "20",class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="field mb-2 w-full md:w-1/3 px-3">
            <%= form.label :catagory, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :catagory,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
           <div class="field mb-2 w-full md:w-1/3 px-3">
            <%= form.label :publisher, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :publisher,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div> 
          <div class="field mb-2 w-full md:w-1/3 px-3">
            <%= form.label :library_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.text_field :library_id,class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
        </div>
    
        <div class="actions focus:outline-none focus:shadow-outline">
          <%= form.submit "Edit Book", class: "bg-cyan-600 flex hover:bg-blue-700 justify-center w-full text-white text-xl font-medium rounded mt-4 p-2"%>
        </div>
      <% end %>
    </div>
  </div>
</div>