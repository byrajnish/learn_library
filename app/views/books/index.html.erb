<p id="notice"><%#= notice %></p>
<%#= render "header" %>
<%#= render "navbar" %>
<div class="container w-full max-w-6xl p-0 mx-auto">
  <div class="bg-cyan-600 h4 mt-2 p-2 border  rounded-md">
    <div class="flex justify-between sm:col-1">
      <div class="border-4 h-12 border-gray-300 bg-white px-1 rounded-lg focus:outline-none mr-4">
        <%= form_tag books_path, :method => 'get', :id => "books_search" do %>
          <input class="text-sm focus:outline-none mb-1"type="search" id="books3" name="search"  placeholder="Type to search" value="<%= params[:search] %>">
          <button type="submit" class="ml-6">
            <svg onclick="$('#books_search').submit()" class="text-gray-900 h-4 w-4 fill-current" xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px"
                viewBox="0 0 56.966 56.966" style="enable-background:new 0 0 56.966 56.966;" xml:space="preserve"
                width="512px" height="512px">
              <path
                  d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z" />
            </svg>
          </button>
        <% end %> 
      </div>              
      <%= link_to 'Add New Book', new_book_path,class:"bg-gray-700  hover:bg-blue-700 text-white text-sm font-medium py-3 px-10  rounded focus:outline-none focus:shadow-outline sm:col-1 " %> 
    </div>
  </div>
  <div class="mb-2  bg-white w-full max-w-6xl container border place-items-left  rounded-md mt-2 overflow-y-auto  mx-auto lg:overflow-x-hidden " >  
    <div class="flex flex-col">
      <div class="md:overflow-x-auto sm:-mx-6 lg:-mx-6">
        <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
          <div class="md:overflow-x-auto">
            <table class="min-w-full table-auto text-center">
              <thead class="bg-cyan-600 border-b-2 border-gray-400 p-2">
                <tr>
                  <th class="py-3 px-14 text-left text-white text-sm font-semibold tracking-wide">Name </th>
                  <th class="p-3 text-left text-sm text-white font-semibold tracking-wide">Author </th>
                  <th class="p-3 text-sm text-white font-semibold tracking-wide">ISBN No.</th>
                  <th class="p-3 text-sm text-white font-semibold tracking-wide">Publication Year</th>
                  <th class="p-3 text-sm text-white font-semibold tracking-wide">Catagory</th>
                  <th class="p-3 text-sm text-white font-semibold tracking-wide">Show</th>
                  <th class="p-3 text-sm text-white font-semibold tracking-wide">Edit</th>
                  <th class="p-3 text-sm text-white font-semibold tracking-wide">Delete</th>
                </tr>
              </thead>
              <tbody>
                <%= render partial: "bookdetails", collection: @books.order("created_at DESC")%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
